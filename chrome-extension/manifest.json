
{
  "manifest_version": 3,
  "name": "SEO Website Analyzer",
  "version": "1.0.0",
  "description": "Analysiert Websites f√ºr SEO-Optimierung und sendet Daten an die Analyzer-App",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Website analysieren"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
